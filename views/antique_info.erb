<div class="page-header">
  <h1 class="text-center"><%= @antique.description %>'s info page </h1>
  <a href="/">Home</a>
</div>

<h3>Cost: $<%= @antique.cost %></h3>
<div class="row">
  <div class="col-md-4">
    <form action="/antiques/<%= @antique.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="cost">Update item Cost</label>
        <input type="number" name="cost" step="any" class="form-control" required>
      </div>
      <button name="change_description" type="submit" class="btn btn-primary">Update Cost</button>
    </form>
  </div>
  <div class="col-md-4">
    <form action="/antiques/<%= @antique.id %>" method="post">
      <input type="hidden" name="_method" value="patch">
      <div class="form-group">
        <label for="description">Update item Name</label>
        <input type="text" name="description" class="form-control" required>
      </div>
      <button name="change_description" type="submit" class="btn btn-primary">Update Name</button>
    </form>
  </div>
</div>
<br>
<div class="row">
  <div class="col-md-4">
    <form action="/antiques/<%= @antique.id %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <button name="destroy" class="btn btn-danger">Delete Antique</button>
    </form>
  </div>
</div>
