
<div class="page-header">
  <h1 class="text-center">Jim Joe's Inventory</h1>
  <a href="/">Home</a>
</div>

<p class= "lead"> Here is a list of our current antiques for sale:
  <ul>
    <% @antiques.inventory.each() do |antique| %>
    <li><a href="/antiques/<%= antique.id %>"><%= antique.description %></a>  </li>
    <% end %>
  </ul>
</p>

<form action="/antiques" method="post">
  <div class="form-group">
    <label for="description">Item Description</label>
    <input id="description" name="description" type="text" placeholder="Item Description" class="form-control" autofocus required>
  </div>
  <div class="form-group">
    <label for="cost">Item Cost</label>
    <input id="cost" name="cost" type="number" step="any" placeholder="Item Cost" class="form-control" required>
  </div>
  <button type="submit" class="btn btn-success">Add Item</button>
</form>
